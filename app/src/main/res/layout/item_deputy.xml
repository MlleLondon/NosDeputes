<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="5sp">


    <ImageView
        android:id="@+id/imageViewItemDeputy"
        android:layout_margin="10sp"
        android:layout_width="0sp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:src="@mipmap/ic_launcher"
        android:contentDescription="@string/photo_profil" />
    <LinearLayout
        android:id="@+id/layoutSeparatorDeputy"
        android:layout_width="2sp"
        android:layout_height="match_parent"
        android:layout_margin="5sp"
        android:orientation="vertical">
    </LinearLayout>
    <LinearLayout
        android:layout_width="0sp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:gravity="center"
        android:layout_margin="10sp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewItemDeputyName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_margin="5sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="NOM Prénom" />

        <TextView
            android:id="@+id/textViewItemDeputyCirco"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_margin="5sp"
            android:textColor="@color/black"
            android:text="Département, Circonscription" />
    </LinearLayout>
</LinearLayout>